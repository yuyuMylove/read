<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <include
        layout="@layout/common_header_layout"
        >
    </include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_150_dip"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_150_dip"
                android:orientation="vertical"
                android:layout_weight="5"
                android:gravity="right"
                >

                <com.yey.read.widget.loginwidget.CircleImageView
                    android:id="@id/boy_logo"
                    android:layout_width="@dimen/dimen_92_dip"
                    android:layout_height="@dimen/dimen_92_dip"
                    android:layout_marginRight="@dimen/dimen_25_dip"
                    android:layout_marginTop="@dimen/dimen_30_dip"
                    android:background="@drawable/selector_register_boy_image"
                    app:border_width="0.5dip"
                    app:border_color="@color/white"
                    />

                <TextView
                    android:layout_width="@dimen/dimen_50_dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_46_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:textSize="@dimen/txtSize_14_sp"
                    android:textColor="#333333"
                    android:text="男孩"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_150_dip"
                android:orientation="vertical"
                android:layout_weight="5"
                android:gravity="left"
                >

                <com.yey.read.widget.loginwidget.CircleImageView
                    android:id="@id/girl_logo"
                    android:layout_width="@dimen/dimen_92_dip"
                    android:layout_height="@dimen/dimen_92_dip"
                    android:layout_marginLeft="@dimen/dimen_25_dip"
                    android:layout_marginTop="@dimen/dimen_30_dip"
                    android:background="@drawable/selector_register_girl_image"
                    app:border_width="0.5dip"
                    app:border_color="@color/white"
                    />

                <TextView
                    android:layout_width="@dimen/dimen_50_dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_46_dip"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:textSize="@dimen/txtSize_14_sp"
                    android:textColor="#333333"
                    android:text="女孩"
                    android:gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:gravity="center"
            >

            <View
                android:layout_width="@dimen/dimen_113_dip"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:background="#999999"
                android:layout_marginRight="@dimen/dimen_10_dip"
                ></View>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_16_sp"
                android:textColor="#333333"
                android:text="生日"
                />

            <View
                android:layout_width="@dimen/dimen_113_dip"
                android:layout_height="@dimen/dimen_0.5_dip"
                android:background="#999999"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                ></View>
            
        </LinearLayout>
        
        <Button
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_width="@dimen/dimen_282_dip"
            android:layout_height="@dimen/dimen_47_dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2013年 11月 16号"
            android:textColor="#666666"
            android:textSize="@dimen/txtSize_17_sp"
            android:background="#efefef"
            >

        </Button>

        <Button
            android:layout_gravity="center"
            android:text="@string/next_step"
            android:id="@+id/btn_activity_nextstep2"
            android:layout_marginTop="@dimen/dimen_35_dip"
            style="@style/mainBtn"
            />

    </LinearLayout>



</LinearLayout>