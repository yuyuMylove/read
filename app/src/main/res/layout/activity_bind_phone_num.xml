<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/me_fragment_background" >
    <include layout="@layout/common_header_layout"/>
    <RelativeLayout android:background="@drawable/common_border_no_shadow"
        android:layout_marginTop="@dimen/dimen_25_dip"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_53_dip"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_bind_phone"
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:src="@drawable/icon_safe_bind_phone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_bind_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:textSize="@dimen/txtSize_16_sp"
            android:textColor="@color/bind_phone_cancel_text"
            android:layout_alignTop="@id/iv_bind_phone"
            android:layout_toRightOf="@id/iv_bind_phone"
            android:layout_toEndOf="@id/iv_bind_phone"
            />

        <TextView
            android:id="@+id/tv_bind_phone_ischecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已验证"
            android:textColor="@color/yellow_topbar"
            android:textSize="@dimen/txtSize_16_sp"
            android:layout_marginRight="@dimen/dimen_11_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/iv_bind_phone_checkbox"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_safe_checkbox_true"
            android:layout_toLeftOf="@+id/tv_bind_phone_ischecked"
            android:layout_toStartOf="@+id/tv_bind_phone_ischecked" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_bind_change"
        android:background="@drawable/common_border_no_shadow"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_53_dip"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_change_phone"
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:src="@drawable/icon_login_password"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/tv_bind_phone_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换绑手机"
            android:textSize="@dimen/txtSize_16_sp"
            android:textColor="@color/bind_phone_cancel_text"
            android:layout_alignTop="@id/iv_change_phone"
            android:layout_toRightOf="@id/iv_change_phone"
            android:layout_toEndOf="@id/iv_change_phone"
            />
        <ImageView
            android:layout_width="@dimen/dimen_12_dip"
            android:layout_height="@dimen/dimen_12_dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_me_go"
            android:layout_marginRight="@dimen/dimen_11_dip"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View style="@style/viewlinestyle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_11_dip"
        android:textColor="@color/bind_phone_cancel_text"
        android:text="*绑定手机账号可以帮助您找回密码或登录阅读平台，以上信息仅供app内部使用，不会被展示透露。"/>
</LinearLayout>
