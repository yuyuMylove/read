<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dimen_14_dip"
    android:paddingRight="@dimen/dimen_14_dip"
    >
    <RelativeLayout
        android:layout_height="@dimen/dimen_148_dip"
        android:layout_width="match_parent"
        android:background="@drawable/shape"
        >

        <ImageView
            android:id="@+id/ItemImage"
            android:layout_width="@dimen/dimen_85_dip"
            android:layout_height="@dimen/dimen_120_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/ItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_18_dip"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dimen_23_dip"
            android:layout_marginLeft="@dimen/dimen_17_dip"
            android:layout_toRightOf="@+id/ItemImage"
            />

        <TextView
            android:id="@+id/ItemAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15_dip"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dimen_16_dip"
            android:layout_marginLeft="@dimen/dimen_17_dip"
            android:layout_toRightOf="@+id/ItemImage"
            android:layout_below="@+id/ItemTitle"
            />

        <TextView
            android:id="@+id/ItemReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15_dip"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:layout_marginLeft="@dimen/dimen_17_dip"
            android:layout_toRightOf="@+id/ItemImage"
            android:layout_below="@+id/ItemAge"
            />

    </RelativeLayout>


</RelativeLayout>