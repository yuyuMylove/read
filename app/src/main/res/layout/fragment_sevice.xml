<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_white"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_34_dip"
                android:background="@color/service_section_bg"
                android:text="基础服务"
                android:textSize="@dimen/dimen_17_dip"
                android:textColor="@color/service_text"
                android:paddingLeft="@dimen/dimen_13_dip"
                android:gravity="center_vertical"/>
            <ListView
                android:id="@+id/lv_service_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"></ListView>
            <View   style="@style/viewlinestyle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_34_dip"
                android:background="@color/service_section_bg"
                android:text="会员服务"
                android:textSize="@dimen/dimen_17_dip"
                android:textColor="@color/service_text"
                android:paddingLeft="@dimen/dimen_13_dip"
                android:gravity="center_vertical"/>
            <ListView
                android:id="@+id/lv_service_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"></ListView>
            <View   style="@style/viewlinestyle"/>
            <Button android:id="@+id/btn_service_tobevip"
                android:layout_height="@dimen/dimen_48_dip"
                android:layout_width="@dimen/dimen_334_dip"
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:layout_gravity="center_horizontal"
                android:text="开通会员"
                android:textSize="@dimen/txtSize_17_sp"
                android:textColor="@color/service_tobevip_text"
                android:background="@drawable/bg_service_tobevip"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>