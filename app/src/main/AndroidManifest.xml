        <activity
            android:name=".home.activity.RecommendBookActivity"
            android:label="@string/title_activity_recommend_book" >
        </activity>
        <activity
            android:name=".home.activity.BookDetailActivity"
            android:label="@string/title_activity_book_detail" >
        </activity>
    </application>

</manifest>
