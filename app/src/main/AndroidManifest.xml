        <activity
            android:name=".register.controller.RegisterFourthStepActivity"
            android:label="@string/title_activity_fourth_step" >
        </activity>
        <activity
            android:name=".register.controller.RegisterFifthStepActivity"
            android:label="@string/title_activity_fifth_step" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_home" >
